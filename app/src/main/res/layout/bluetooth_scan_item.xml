<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="61dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/item_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_dev_name_id"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:text="blue_name"
            android:textColor="@color/title_c"
            android:textSize="16dp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@drawable/image_line" />

        <TextView
            android:id="@+id/tv_dev_mac_id"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:text="AF:CD:AE:4F:F5"
            android:textColor="@color/mac_text_c"
            android:textSize="13dp" />
    </LinearLayout>

</LinearLayout>
